<Window x:Class="Coaching_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Coaching_Manager"
        xmlns:helpers="clr-namespace:CoachingCenterApp.Helpers"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"> 
    <Window.Resources>
        <!-- Converter for sidebar width -->
        <helpers:CollapseWidthConverter x:Key="CollapseWidthConverter"/>
        <helpers:CollapseIconConverter x:Key="CollapseIconConverter"/>
        <helpers:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding IsSidebarCollapsed, 
                                    Converter={StaticResource CollapseWidthConverter}}"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar Content -->
        <Border Grid.Column="0" Background="#2C3E50">       
            <StackPanel>
                <!-- Toggle Button -->
                <Button Command="{Binding ToggleSidebarCommand}" 
                        HorizontalAlignment="Left"
                        Margin="10">
                    <materialDesign:PackIcon 
                        Kind="{Binding IsSidebarCollapsed, Converter={StaticResource CollapseIconConverter}}"
                        Foreground="White"/>
                </Button>
 
                <!-- Menu Items -->
                <TextBlock Text="Coaching Center" 
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="10,0,10,20"
                           Visibility="{Binding IsSidebarCollapsed, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Reverse}"
                           Foreground="White"/>

                <!-- Example Menu Items -->
                <Button Command="{Binding NavigateToDashboardCommand}" 
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Foreground="White"
                        HorizontalAlignment="Left"
                        Margin="10,5">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ViewDashboard" Foreground="White"/>
                        <TextBlock Text="Dashboard" Margin="10,0,0,0"
                                   Visibility="{Binding IsSidebarCollapsed, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Reverse}"/>
                    </StackPanel>
                </Button>
                <!-- Add more menu items similarly -->
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <ContentControl Grid.Column="1" Content="{Binding CurrentPage}"/>
    </Grid>
</Window>