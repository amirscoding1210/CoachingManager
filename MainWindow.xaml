<Window x:Class="Coaching_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Coaching_Manager"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Dashboard"
        Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar / Navigation Drawer -->
        <StackPanel Background="{DynamicResource MaterialDesignShadowBrush}" Orientation="Vertical">
            <TextBlock Text="🏫 Coaching Center" 
                       Foreground="White" FontSize="18" FontWeight="Bold" 
                       Margin="10,30,10,20"/>

            <Button Content="📊 Dashboard" Style="{StaticResource MaterialDesignFlatButton}" Foreground="White" Margin="10"/>
            <Button Content="👨‍🎓 Students" Style="{StaticResource MaterialDesignFlatButton}" Foreground="White" Margin="10"/>
            <Button Content="📅 Attendance" Style="{StaticResource MaterialDesignFlatButton}" Foreground="White" Margin="10"/>
            <Button Content="💰 Fees" Style="{StaticResource MaterialDesignFlatButton}" Foreground="White" Margin="10"/>
            <Button Content="📝 Reports" Style="{StaticResource MaterialDesignFlatButton}" Foreground="White" Margin="10"/>
            <Button Content="⚙️ Settings" Style="{StaticResource MaterialDesignFlatButton}" Foreground="White" Margin="10"/>

            <StackPanel VerticalAlignment="Bottom" Margin="10">
                <Separator Margin="0,20"/>
                <Button Content="🔓 Logout" Style="{StaticResource MaterialDesignFlatButton}" Foreground="White" />
            </StackPanel>
        </StackPanel>

        <!-- Main Content Area -->
        <ScrollViewer Grid.Column="1" Padding="20">
            <StackPanel>

                <!-- Dashboard Header -->
                <TextBlock Text="Dashboard Overview" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>

                <!-- Info Cards -->
                <UniformGrid Columns="3" Rows="1" Margin="0,10,0,20">
                    <!-- Total Students -->
                    <materialDesign:Card Padding="20" Margin="10" Background="#FFEEEEEE">
                        <StackPanel>
                            <TextBlock Text="Total Students" FontSize="16" Foreground="Gray"/>
                            <TextBlock Text="600" FontSize="28" FontWeight="Bold"/>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- Present Today -->
                    <materialDesign:Card Padding="20" Margin="10" Background="#FFEEEEEE">
                        <StackPanel>
                            <TextBlock Text="Present Today" FontSize="16" Foreground="Gray"/>
                            <TextBlock Text="420" FontSize="28" FontWeight="Bold"/>
                        </StackPanel>
                    </materialDesign:Card>

                    <!-- Monthly Income -->
                    <materialDesign:Card Padding="20" Margin="10" Background="#FFEEEEEE">
                        <StackPanel>
                            <TextBlock Text="Monthly Income" FontSize="16" Foreground="Gray"/>
                            <TextBlock Text="৳120,000" FontSize="28" FontWeight="Bold"/>
                        </StackPanel>
                    </materialDesign:Card>
                </UniformGrid>

                <!-- Placeholder for Charts / Reports -->
                <materialDesign:Card Padding="20" Margin="0,10" Background="#FFFAFAFA">
                    <TextBlock Text="Attendance Chart or Fee Graph will go here..." FontStyle="Italic" Foreground="Gray"/>
                </materialDesign:Card>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
